<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChuckNorrisIo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/p_dark</item>
        <item name="colorAccent">@color/p_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ChuckNorrisIo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChuckNorrisIo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChuckNorrisIo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ChuckNorrisIo.Fullscreen" parent="Theme.ChuckNorrisIo">
        <item name="android:actionBarStyle">@style/Widget.Theme.ChuckNorrisIo.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ChuckNorrisIo.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>